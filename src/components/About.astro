---
import { config } from '../config';
---

{config.about && (
  <section id="about" class="py-24 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center mb-12 relative inline-block w-full">
        About Me
        <span class="block w-20 h-1 bg-gradient-to-r from-primary to-secondary mx-auto mt-4 rounded"></span>
      </h2>
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div class="relative">
          <div class="absolute -inset-4 bg-gradient-to-r from-primary to-secondary opacity-20 blur-xl rounded-3xl"></div>
          <img src="/assets/profile.jpg" alt="Profile Picture" class="relative w-full max-w-sm mx-auto rounded-2xl shadow-2xl grayscale-[20%] hover:grayscale-0 transition-all duration-500 hover:scale-105" onerror="this.src='/assets/profile.jpg'" />
        </div>
        <div>
          <h3 class="text-2xl font-bold text-primary mb-4">{config.about.title}</h3>
          {config.about.description.map((para) => (
            <p class="text-gray-600 mb-4 leading-relaxed">{para}</p>
          ))}
          {config.about.info && (
            <div class="space-y-3 my-6">
              {config.about.info.location && (
                <div class="flex items-center gap-3 text-gray-600">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span>{config.about.info.location}</span>
                </div>
              )}
              {config.about.info.education && (
                <div class="flex items-center gap-3 text-gray-600">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  </svg>
                  <span>{config.about.info.education}</span>
                </div>
              )}
              {config.about.info.status && (
                <div class="flex items-center gap-3 text-gray-600">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <span>{config.about.info.status}</span>
                </div>
              )}
            </div>
          )}
          {config.resume && (
            <a href={config.resume} download class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-full font-semibold hover:scale-105 hover:shadow-lg transition-all duration-300">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Download Resume
            </a>
          )}
        </div>
      </div>
    </div>
  </section>
)}

