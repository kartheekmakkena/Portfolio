---
import { config } from '../config';
---

<section id="home" class="min-h-screen flex items-center justify-center relative overflow-hidden pt-16 bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 bg-[length:200%_200%] animate-gradient hero-section">
  <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] bg-cover bg-bottom opacity-50 animate-wave"></div>
  <div class="absolute inset-0 hero-particles"></div>
  <div class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto animate-fade-in-up">
    <h1 class="text-5xl md:text-6xl font-bold mb-4 leading-tight">
      Hi, I'm <span class="bg-gradient-to-r from-yellow-400 to-orange-500 bg-clip-text text-transparent">Kartheek Makkena</span>
    </h1>
    <p class="text-xl md:text-2xl mb-4 opacity-90">{config.title}</p>
    <p class="text-lg md:text-xl max-w-2xl mx-auto mb-8 opacity-85">
      {config.subtitle}
    </p>
    <div class="flex flex-wrap gap-4 justify-center mb-8">
      <a href="#projects" class="btn-ripple px-8 py-3 bg-white text-primary rounded-full font-semibold hover:scale-110 hover:shadow-2xl transition-all duration-300 relative overflow-hidden group">
        <span class="relative z-10">View My Work</span>
        <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-500"></span>
      </a>
      {config.resume && (
        <a href={config.resume} download class="btn-ripple px-8 py-3 bg-white text-primary rounded-full font-semibold hover:scale-110 hover:shadow-2xl transition-all duration-300 relative overflow-hidden group">
          <span class="relative z-10">ðŸ“„ Download Resume</span>
          <span class="absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-500"></span>
        </a>
      )}
      <a href="#contact" class="btn-ripple px-8 py-3 border-2 border-white text-white rounded-full font-semibold hover:bg-white hover:text-primary-dark hover:scale-110 transition-all duration-300 relative overflow-hidden">
        Get In Touch
      </a>
    </div>
    <div class="flex gap-6 justify-center">
      {config.social?.github && (
        <a href={config.social.github} target="_blank" rel="noopener noreferrer" class="social-link w-12 h-12 rounded-full bg-white/15 backdrop-blur-md border border-white/30 flex items-center justify-center text-white hover:bg-white hover:text-primary transition-all duration-400 relative overflow-hidden group">
          <span class="absolute inset-0 bg-white/30 rounded-full scale-0 group-hover:scale-150 transition-transform duration-600 opacity-0 group-hover:opacity-100"></span>
